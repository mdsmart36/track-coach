h1.text-center {{welcome}}
.row
  .col-xs-1
  .col-xs-3
    form.form-horizontal
      button.btn.btn-default(ng-click='showLoginBtn()') Login
      button.btn.btn-default(ng-click='showRegisterBtn()') Register
      .form-group(ng-show='showLogin')
        label.control-label Email
        input.form-control(type='email', name='userEmail', ng-model='user.email')
        label.control-label Password
        input.form-control(type='password', name='userEmail', ng-model='user.password')
        button.btn.btn-default Login Now
      .form-group(ng-show='showRegister')
        label.control-label Email
        input.form-control(type='email', name='userEmail', ng-model='user.email')
        label.control-label Password
        input.form-control(type='password', name='userEmail', ng-model='user.password')
        button.btn.btn-default(ng-click='register()') Register Now
  .col-xs-7
  .col-xs-1